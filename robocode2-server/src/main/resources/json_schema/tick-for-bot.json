{
    "id": "#tick-for-bot.json",
    "description": "Tick for bot. Next turn has started.",
    "type": "object",
    "properties": {
        "message-type": {
            "enum": [ "tick-for-bot" ]
        },
        "round-state": {
            "description": "Current state of the round",
            "$ref": "round-state.json"
        },
        "bot-state": {
            "description": "Current state of this bot",
            "type": "object",
            "properties": {
                "energy": {
                    "description": "Energy level",
                    "type": "number"
                },
                "position": {
                    "description": "Position (x, y)",
                    "$ref": "types/position.json"
                },
                "direction": {
                    "description": "Direction of the hull in degrees",
                    "$ref": "types/angle.json"
                },
                "turret-direction": {
                    "description": "Direction of the turret in degrees",
                    "$ref": "types/angle.json"
                },
                "radar-direction": {
                    "description": "Direction of the radar in degrees",
                    "$ref": "types/angle.json"
                },
                "speed": {
                    "description": "Speed measured in units per turn",
                    "type": "number"
                },
                "scan-arc": {
                    "description": "Scan arc, where a positive angle means that scan is moving left and negative angle means that the scan is moving right",
                    "$ref": "types/arc.json"
                }
            },
            "required":
            [
                "energy",
                "position",
                "direction",
                "turret-direction",
                "radar-direction",
                "speed",
                "scan-arc"
            ]
        },
        "bullet-states": {
            "description": "Current state of the bullets fired by this bot",
            "type": "array",
            "items": { "$ref": "#/definitions/bullet-state" }
        },
        "scanned-bots": {
            "description": "Bots scanned in this turn by this bot",
            "type": "array",
            "items": { "$ref": "#/definitions/scanned-bot" }
        }
    },
    "required":
    [
        "message-type",
        "round-state",
        "bot-state",
        "bullet-states"
    ],
    "definitions": {
        "bullet-state": {
            "description": "Bullet state",
            "type": "object",
            "properties": {
                "id": {
                    "description": "Unique identifier, but only for this bot",
                    "type": "integer"
                },
                "power": {
                    "description": "Bullet power level",
                    "type": "number"
                },
                "position": {
                    "description": "Position (x, y)",
                    "$ref": "types/position.json"
                },
                "direction": {
                    "description": "Direction in degrees",
                    "$ref": "types/angle.json"
                },
                "speed": {
                    "description": "Speed measured in units per turn",
                    "type": "number"
                }
            },
            "required":
            [
                "id",
                "power",
                "position",
                "direction",
                "speed"
            ]
        },
        "scanned-bot": {
            "description": "Scanned bot",
            "type": "object",
            "properties": {
                "id": {
                    "description": "Unique identifier, but only for this bot",
                    "type": "integer"
                },
                "energy": {
                    "description": "Energy level",
                    "type": "number"
                },
                "position": {
                    "description": "Position (x, y)",
                    "$ref": "types/position.json"
                },
                "direction": {
                    "description": "Direction in degrees",
                    "$ref": "types/angle.json"
                },
                "speed": {
                    "description": "Speed measured in units per turn",
                    "type": "number"
                }
            },
            "required":
            [
                "id",
                "energy",
                "position",
                "direction",
                "speed"
            ]
        }
    }
}
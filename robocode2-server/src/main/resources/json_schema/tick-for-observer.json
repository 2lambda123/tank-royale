{
	"id": "#tick-for-observer.json",
	"$schema": "http://json-schema.org/draft-04/schema#",
	"description": "Tick for observer. Next turn has started.",

	"type": "object",
	"extends": {
		"$ref": "message.json",
		"default": "tick-for-observer"
	},
	"properties": {
		"round-state": {
			"description": "Current state of the round",
			"$ref": "round-state.json"
		},
		"bot-states": {
			"description": "Current state of all bots",
			"type": "array",
			"items": { "$ref": "bot-state.json" }
		},
		"bullet-states": {
			"description": "Current state of all bullets",
			"type": "array",
			"items": { "$ref": "bullet-state.json" }
		},
		"events": {
			"description": "Events occuring at this tick",
			"type": "array",
			"items": { "$ref": "events/event.json" }
		}
	},
	"required": [
		"round-state",
		"bot-states",
		"bullet-states",
		"events"
	]
}
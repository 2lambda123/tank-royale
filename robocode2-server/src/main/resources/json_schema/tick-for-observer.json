{
    "id": "#tick-for-observer.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Tick for observer. Next turn has started.",
    "type": "object",
    "properties": {
        "message-type": {
            "enum": [ "tick-for-observer" ]
        },
        "round-state": {
            "description": "Current state of the round",
            "type": "object",
            "properties": {
                "round-number": {
                    "description": "Round number in this battle",
                    "type": "integer"
                },
                "turn-number": {
                     "description": "Turn number in this round of the battle",
                     "type": "integer"
                }
            },
            "required": [ "round-number", "turn-number" ]
        },
        "bot-states": {
            "description": "Current state of all bots",
            "type": "array",
            "items": { "$ref": "#/definitions/bot-state" }
        },
        "bullet-states": {
            "description": "Current state of all bullets",
            "type": "array",
            "items": { "$ref": "#/definitions/bullet-state" }
        }
    },
    "required":
    [
        "message-type",
        "round-state",
        "bot-states",
        "bullet-states"
    ],
    "definitions": {
        "position": {
            "description": "Position as a 2D coordinate (x, y)",
            "type": "object",
            "properties": {
                "x": {
                    "description": "X coordinate",
                    "type": "number"
                },
                "y": {
                    "description": "Y coordinate",
                    "type": "number"
                }
            },
            "required": [ "x", "y" ]
        },
        "angle": {
            "description": "Absolute angle in degrees",
            "type": "number",
            "minimum": 0,
            "maximum": 360,
            "exclusiveMaximum": true
        },
        "arc": {
            "description": "A minimum arc defined of a radius and center angle, which can be positive, negative, or zero",
            "type": "object",
            "properties": {
                "angle": {
                    "description": "Center angle",
                    "$ref": "#/definitions/angle"
                },
                "radius": {
                    "description": "Circular radius of the arc in units",
                    "type": "number",
                    "minimum": 0
                }
            },
            "required": [ "angle", "radius" ]
        },
        "bot-state": {
            "description": "Bot state",
            "type": "object",
            "properties": {
                "id": {
                    "description": "Unique identifier, but only for this observer",
                    "type": "integer"
                },
                "energy": {
                    "description": "Energy level",
                    "type": "number"
                },
                "position": {
                    "description": "Position (x, y)",
                    "$ref": "#/definitions/position"
                },
                "direction": {
                    "description": "Direction of the hull in degrees",
                    "$ref": "#/definitions/angle"
                },
                "turret-direction": {
                    "description": "Direction of the turret in degrees",
                    "$ref": "#/definitions/angle"
                },
                "radar-direction": {
                    "description": "Direction of the radar in degrees",
                    "$ref": "#/definitions/angle"
                },
                "speed": {
                    "description": "Speed measured in units per turn",
                    "type": "number"
                },
                "scan-arc": {
                    "description": "Scan arc, where a positive angle means that scan is moving left and negative angle means that the scan is moving right",
                    "$ref": "#/definitions/arc"
                }
            },
            "required":
            [
                "id",
                "energy",
                "position",
                "direction",
                "turret-direction",
                "radar-direction",
                "speed",
                "scan-arc"
            ]
        },
        "bullet-state": {
            "description": "Bullet state",
            "type": "object",
            "properties": {
                "id": {
                    "description": "Unique identifier, but only for this observer",
                    "type": "integer"
                },
                "power": {
                    "description": "Bullet power level",
                    "type": "number"
                },
                "position": {
                    "description": "Position (x, y)",
                    "$ref": "#/definitions/position"
                },
                "direction": {
                    "description": "Direction in degrees",
                    "$ref": "#/definitions/angle"
                },
                "speed": {
                    "description": "Speed measured in units per turn",
                    "type": "number"
                }
            },
            "required":
            [
                "id",
                "power",
                "position",
                "direction",
                "speed"
            ]
        }
    }
}
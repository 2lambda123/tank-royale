{
	"id": "#message.json",
	"$schema": "http://json-schema.org/draft-04/schema#",
	"description": "Message exchanged between server and client",

	"type": "object",
	"properties": {
		"message-type": {
			"enum": [
				"server-handshake",
				"bot-handshake",
				"observer-handshake",
				"new-battle-for-bot",
				"new-battle-for-observer",
				"bot-ready",
				"tick-for-bot",
				"tick-for-observer"
			]
		}
	},
	"required": [
		"message-type"
	]
}
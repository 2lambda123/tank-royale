{
	"id": "#tick-for-bot.json",
	"$schema": "http://json-schema.org/draft-04/schema#",
	"description": "Tick for bot. Next turn has started.",

	"javaType": "net.robocode2.json_schema.messages.TickForBot",
	"extends": {
		"$ref": "message.json",
		"default": "tick-for-bot"
	},
	"properties": {
		"round-state": {
			"description": "Current state of the round",
			"$ref": "../states/round-state.json"
		},
		"bot-state": {
			"description": "Current state of this bot",
			"$ref": "../states/bot-state-without-id.json"
		},
		"bullet-states": {
			"description": "Current state of the bullets fired by this bot",
			"type": "array",
			"items": { "$ref": "../states/bullet-state.json" }
		},
		"events": {
			"description": "Events occurring relevant for this bot",
			"type": "array",
			"items": { "$ref": "../events/event.json" }
		}
	},
	"required": [
		"round-state",
		"bot-state",
		"bullet-states",
		"events"
	]
}
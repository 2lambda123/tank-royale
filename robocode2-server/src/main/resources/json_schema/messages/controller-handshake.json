{
	"id": "#controller-handshake.json",
	"$schema": "http://json-schema.org/draft-04/schema#",
	"description": "Controller handshake",

	"javaType": "net.robocode2.json_schema.messages.ControllerHandshake",
	"extends": {
		"$ref": "message.json",
		"default": "controller-handshake"
	},
	"properties": {
		"name": {
			"description": "Name of controller, e.g. Fancy Robocode Controller",
			"type": "string"
		},
		"version": {
			"description": "Controller version, e.g. 1.0",
			"type": "string"
		},
		"author": {
			"description": "Author name, e.g. John Doe (john_doe@somewhere.net)",
			"type": "string"
		}
	},
	"required": [
		"name",
		"version"
	]
}

{
	"id": "#position.json",
	"$schema": "http://json-schema.org/draft-04/schema#",
	"description": "Position as a 2D coordinate (x, y)",

	"type": "object",
	"properties": {
		"x": {
			"description": "X coordinate",
			"type": "number"
		},
		"y": {
			"description": "Y coordinate",
			"type": "number"
		}
	},
	"required": [
		"x",
		"y"
	]
}
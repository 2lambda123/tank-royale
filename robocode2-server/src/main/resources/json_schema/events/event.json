{
	"id": "#event.json",
	"$schema": "http://json-schema.org/draft-04/schema#",
	"description": "Event occurring in the battle arena",

	"type": "object",
	"javaName": "Event",
	"properties": {
		"message-type": {
			"enum": [
				"scanned-bot-event",
				"bullet-hit-bot-event",
				"bullet-hit-bullet-event",
				"bullet-missed",
				"hit-by-bullet-event",
				"destroyed-event",
				"bot-destroyed-event",
				"collision-event",
				"skipped-turn-event",
				"won-round-event"
			]
		}
	},
	"required": [
		"message-type"
	]
}